<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="148px"
    android:background="@android:color/darker_gray"
    tools:ignore="PxUsage,UselessParent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:background="#0a22de"
            android:padding="5px" >

            <LinearLayout
                android:id="@+id/testButton1"
                android:layout_width="100px"
                android:layout_height="50px"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClickButton"
                android:layout_alignParentLeft="true"
                android:background="#FFF" >

                <TextView
                    android:id="@+id/mButtonText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#000"
                    android:text="@string/Save"                  
                    android:textSize="@dimen/smart_watch_2_text_size_large" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/smart_watch_2_text_size_large" />

        <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/smart_watch_2_text_size_medium" />
    </LinearLayout>

</RelativeLayout>